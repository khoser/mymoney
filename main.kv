#:kivy 1.9.0


<MyFace>:
    item_in: items_in
    item_out: items_out

    orientation: 'vertical'
    padding: 20
    spacing: 10
    size_hint: 1, 0.3

    ItemsIn:
        id: items_in

    ItemsOut:
        id: items_out


<ItemsIn>:
    orientation: 'vertical'
    padding: 0
    width: root.width
    height: 15

    Label:
        font_size: 10
        text: 'Статья дохода:'

    TextInput:
        font_size: 12
        text: 'item_in'


<ItemsOut>:
    orientation: 'vertical'
    padding: 0
    width: root.width
    Label:
        font_size: 10
        text: 'Статья расхода:'

    TextInput:
        font_size: 12
        text: ('item_out')
